generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Company Model
model Company {
  id                 Int      @id @default(autoincrement())
  name               String
  registrationNumber String   @unique
  country            String
  state              String
  industryType       String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relations
  users              User[]
}

// User Model
model User {
  id                Int      @id @default(autoincrement())
  fullName          String
  email             String   @unique
  mobile            String
  designation       String
  password          String
  acceptedNDA       Boolean  @default(false)
  acceptedDataConsent Boolean @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  companyId         Int
  company           Company  @relation(fields: [companyId], references: [id])

  transcripts       Transcript[]  
}
model Transcript {
  id                Int      @id @default(autoincrement())
  transcriptId      String   @unique

  userId            Int
  user              User     @relation(fields: [userId], references: [id])

  inputType         InputType
  filePaths         String[]
  rawText           String?

  caseId            String?
  insuranceProvider String?
  policyType        String?
  service           String?

  status            TranscriptStatus @default(PROCESSING)
  createdAt         DateTime @default(now())

  processingStatus  ProcessingStatus?
}

model ProcessingStatus {
  id            Int      @id @default(autoincrement())
  transcriptId  Int      @unique
  transcript    Transcript @relation(fields: [transcriptId], references: [id])

  service       String
  progress      Int
  currentStep   String
  steps         Json

  updatedAt     DateTime @updatedAt
}

enum TranscriptStatus {
  PROCESSING
  COMPLETED
  FAILED
}

enum InputType {
  FILE
  TEXT
}
